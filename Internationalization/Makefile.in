all:: pot linguas

POT_EXT = pot
PO_EXT = po
MO_EXT = mo

POT_FILE = $(PACKAGE_NAME).$(POT_EXT)
$(POT_FILE): $(BLD_TOP)$(PGM_DIR)/cmds.auto.h
	$(SRC_TOP)mkpot -n "$(PACKAGE_NAME)" -v "$(PACKAGE_VERSION)" -o $@ -b "dave@mielke.cc" -c "The BRLTTY Developers" $(SRC_TOP) $(BLD_TOP)
pot: $(POT_FILE)

%.$(PO_EXT): $(POT_FILE)
	msgmerge --force-po --no-wrap --sort-output --update -- $@ $(POT_FILE)

PO_LIST = LINGUAS
$(PO_LIST):
	ls -1 *.$(PO_EXT) | sed -e 's/\..*//' | sort >$@
linguas: $(PO_LIST)

clean::
	-rm -f -- *.$(POT_EXT) $(PO_LIST)

install:: install-locale-directory
	for inputFile in "$(SRC_DIR)/"*.$(PO_EXT); \
	do \
	   localeName=`basename "$${inputFile}" .$(PO_EXT)`; \
	   outputDirectory="$(INSTALL_LOCALE_DIRECTORY)/$${localeName}/LC_MESSAGES"; \
	   outputFile="$${outputDirectory}/$(PACKAGE_NAME).$(MO_EXT)"; \
           $(INSTALL_DIRECTORY) "$${outputDirectory}"; \
	   msgfmt -o "$${outputFile}" "$${inputFile}"; \
	done

uninstall::
	-rm -f -- $(INSTALL_LOCALE_DIRECTORY)/*/*/$(PACKAGE_NAME).$(MO_EXT)

