include $(BLD_TOP)config.mk

PROGRAMS = trcp
programs: $(PROGRAMS)

TRCP_OBJECTS = trcp.o unicode.o $(BLD_TOP)$(PGM_DIR)/options.o $(BLD_TOP)$(PGM_DIR)/misc.o
trcp: $(TRCP_OBJECTS)
	$(CC) $(LDFLAGS) -o $@ $(TRCP_OBJECTS) $(LDLIBS)
trcp.o:
	$(CC) $(CFLAGS) -c $(SRC_DIR)/trcp.c
unicode.o:
	$(CC) $(CFLAGS) -c $(SRC_DIR)/unicode.c

clean::
	rm -f $(PROGRAMS)

