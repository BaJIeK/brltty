include $(BLD_TOP)config.mk

###############################################################################
#
# Makefile for BRLTTY VideoBraille driver
# All variables are defined in the main Makefile...
#
###############################################################################

DRIVER_CODE = vd
DRIVER_NAME = VideoBraille
BRAILLE_MODELS = 40
HELP_DEPS = $(HELP_TEXT)

include $(SRC_TOP)driver.mk

vblow.$O:
	$(CC) $(BRL_CFLAGS) -c $(SRC_DIR)/vblow.c

vb.$O:
	$(CC) $(BRL_CFLAGS) -c $(SRC_DIR)/vb.c
	
braille.$O: vb.$O vblow.$O
	$(MKOBJ) braille.$O vblow.$O vb.$O 

