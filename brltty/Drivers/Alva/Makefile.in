include $(BLD_TOP)config.mk

###############################################################################
#
# Makefile for BRLTTY Alva driver
# All variables are defined in the main Makefile...
#
###############################################################################

DRIVER_CODE = al
DRIVER_NAME = Alva
BRAILLE_MODELS = ABT(3nn), Delphi(4nn), Satellite(5nn)
SPEECH_MODELS = Delphi(4nn)
HELP_DEPS = $(HELP_TEXT)

include $(SRC_TOP)driver.mk

braille.$O:
	$(CC) $(BRL_CFLAGS) -c $(SRC_DIR)/braille.c

speech.$O:
	$(CC) $(SPK_CFLAGS) -c $(SRC_DIR)/speech.c

