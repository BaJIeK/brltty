include $(SRC_TOP)bindings.mk

JAVAC = @JAVAC@
JAVA_ENCODING = UTF-8

all: native jar doc

JAVA_NATIVE = libbrlapi_java.$(LIB_EXT)
native: $(JAVA_NATIVE)

$(JAVA_NATIVE): brlapi.$O brlapi
	$(MKLIB:<name>=brlapi) $@ brlapi.$O $(API_LDFLAGS)

brlapi.$O:
	$(CC) $(LIBCFLAGS) -o $@ -c $(SRC_DIR)/brlapi.c

JAVA_JAR = brlapi.jar
jar: $(JAVA_JAR)

$(JAVA_JAR): classes
	$(JAVAC:javac=jar) cf $@ Brlapi*.class

CLASSES = Brlapi.class BrlapiNative.class BrlapiError.class BrlapiException.class BrlapiSettings.class BrlapiWriteStruct.class BrlapiSize.class BrlapiKey.class ApiTest.class
classes: $(CLASSES)
$(CLASSES): $(SRC_DIR)/*.java BrlapiConstants.class
	$(JAVAC) -d . -classpath . -encoding $(JAVA_ENCODING) $(SRC_DIR)/*.java

BrlapiConstants.class: BrlapiConstants.java
	$(JAVAC) BrlapiConstants.java

BrlapiConstants.java: $(API_HEADER) $(APIDEFS_AWK) $(BRLDEFS_HDR) $(BRLDEFS_AWK) $(SRC_DIR)/constants.awk
	$(AWK) -f $(APIDEFS_AWK) -f $(BRLDEFS_AWK) -f $(SRC_DIR)/constants.awk $(API_HEADER) $(BRLDEFS_HDR) >$@

doc: BrlapiConstants.java
	$(JAVAC:javac=javadoc) -quiet -d . -author -version -use -encoding $(JAVA_ENCODING) $(SRC_DIR)/*.java BrlapiConstants.java

clean::
	-rm -f $(JAVA_NATIVE) BrlapiConstants.java *.class brlapi.jar
	-rm -f -r resources
	-rm -f package-list *.css *.html
	-rm -f gjdoc.properties JAVADOC.PLACEHOLDER

install: all

uninstall:

