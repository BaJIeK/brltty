include $(SRC_TOP)bindings.mk

JAVAC = @JAVAC@
JAVA_ENCODING = UTF-8

all: native jar doc

JAVA_NATIVE = $(LIB_PFX)$(API_NAME)_java.$(LIB_EXT)
native: $(JAVA_NATIVE)

$(JAVA_NATIVE): bindings.$O $(API_NAME)
	$(MKLIB:<name>=$(API_NAME)) $@ bindings.$O $(API_LDFLAGS)

bindings.$O:
	$(CC) $(LIBCFLAGS) -o $@ -c $(SRC_DIR)/bindings.c

JAVA_JAR = $(API_NAME).jar
jar: $(JAVA_JAR)

API_CLASSES = Brlapi.class BrlapiNative.class BrlapiError.class BrlapiException.class BrlapiSettings.class BrlapiWriteStruct.class BrlapiSize.class BrlapiKey.class
ALL_CLASSES = $(API_CLASSES) ApiTest.class

$(JAVA_JAR): $(API_CLASSES)
	$(JAVAC:javac=jar) cf $@ Brlapi*.class

$(ALL_CLASSES): $(SRC_DIR)/*.java BrlapiConstants.class
	$(JAVAC) -d . -classpath . -encoding $(JAVA_ENCODING) $(SRC_DIR)/*.java

BrlapiConstants.class: BrlapiConstants.java
	$(JAVAC) BrlapiConstants.java

BrlapiConstants.java: $(API_HDR) $(API_AWK) $(BRL_HDR) $(BRL_AWK) $(SRC_DIR)/constants.awk
	$(AWK) -f $(API_AWK) -f $(BRL_AWK) -f $(SRC_DIR)/constants.awk $(API_HDR) $(BRL_HDR) >$@

doc: javadoc.made

javadoc.made: $(SRC_DIR)/*.java BrlapiConstants.java
	$(JAVAC:javac=javadoc) -quiet -d . -author -version -use -encoding $(JAVA_ENCODING) $(SRC_DIR)/*.java BrlapiConstants.java
	touch $@

clean::
	-rm -f $(JAVA_NATIVE) BrlapiConstants.java *.class $(JAVA_JAR)
	-rm -f javadoc.made package-list *.css *.html
	-rm -f -r resources
	-rm -f gjdoc.properties JAVADOC.PLACEHOLDER

install: all

uninstall:

