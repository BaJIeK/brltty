include $(SRC_TOP)bindings.mk

JAVAC = @JAVAC@

JAVA_NATIVE = libbrlapi_java.$(LIB_EXT)

all: $(JAVA_NATIVE) Brlapi.class

$(JAVA_NATIVE): brlapi.$O api
	$(MKLIB:<name>=brlapi) $@ brlapi.$O $(API_LDFLAGS)

brlapi.$O: brlapi.c $(API_HEADERS)
	$(CC) $(LIBCFLAGS) -o $@ -c $(SRC_DIR)/brlapi.c

Brlapi.class: $(SRC_DIR)/Brlapi.java $(SRC_DIR)/BrlapiError.java $(SRC_DIR)/BrlapiException.java $(SRC_DIR)/BrlapiKey.java $(SRC_DIR)/BrlapiSize.java
	$(JAVAC) $^

clean::
	-rm -f $(JAVA_NATIVE) *.class

