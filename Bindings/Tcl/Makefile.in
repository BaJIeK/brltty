include $(SRC_TOP)bindings.mk

TCL_OK = @TCL_OK@
TCLSH = @TCLSH@
TCL_CPPFLAGS = @TCL_CPPFLAGS@
TCL_LIBS = @TCL_LIBS@
TCL_DESTDIR = $(INSTALL_ROOT)

TCL_API = $(LIB_PFX)$(API_NAME)_tcl.$(LIB_EXT)

all: $(TCL_API)

$(TCL_API): bindings.$O $(API_NAME)
	$(MKLIB:<name>=$(API_NAME)) $@ bindings.$O $(TCL_LIBS) $(API_LDFLAGS)

bindings.$O:
	$(CC) $(TCL_CPPFLAGS) $(LIBCFLAGS) -o $@ -c $(SRC_DIR)/bindings.c

clean::
	-rm -f $(TCL_API)

install: all
	$(TCLSH) $(SRC_DIR)/pkgutil -root "$(TCL_DESTDIR)" install $(API_NAME) $(API_RELEASE) $(TCL_API)

uninstall:
	-$(TCLSH) $(SRC_DIR)/pkgutil -root "$(TCL_DESTDIR)" uninstall $(API_NAME) $(API_RELEASE)

