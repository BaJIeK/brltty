DRIVER_CODE = vd
DRIVER_NAME = VideoBraille
DRIVER_COMMENT = 40
HELP_DEPS = $(HELP_TEXT)
include $(SRC_TOP)braille.mk

vblow.$O:
	$(CC) $(BRL_CFLAGS) -c $(SRC_DIR)/vblow.c

vb.$O:
	$(CC) $(BRL_CFLAGS) -c $(SRC_DIR)/vb.c
	
braille.$O: vb.$O vblow.$O
	$(MKOBJ) braille.$O vblow.$O vb.$O 

