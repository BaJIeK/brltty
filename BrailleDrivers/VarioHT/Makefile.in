include $(BLD_TOP)config.mk

DRIVER_CODE = vh
DRIVER_NAME = VarioHT
BRAILLE_MODELS = 40 (Vario in HandyTech emulation mode)
HELP_DEPS = $(HELP_TEXT)
include $(SRC_TOP)braille.mk

variolow.$O:
	$(CC) $(BRL_CFLAGS) -c $(SRC_DIR)/variolow.c

vario.$O:
	$(CC) $(BRL_CFLAGS) -c $(SRC_DIR)/vario.c

braille.$O: vario.$O variolow.$O
	$(MKOBJ) braille.$O variolow.$O vario.$O 

