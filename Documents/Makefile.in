all clean distclean::
	for directory in $(MANUAL_DIRECTORIES); do (cd $(BLD_TOP)$$directory && $(MAKE) $@) || exit 1; done

all:: $(ALL_API)

all-api: BrlAPIref.made

BrlAPIref.made: BrlAPIref $(BLD_TOP)$(PGM_DIR)/api.h $(SRC_TOP)$(PGM_DIR)/api_protocol.h BrlAPIref.doxy
	doxygen BrlAPIref.doxy
	touch $@

BrlAPIref:
	mkdir BrlAPIref

$(BLD_TOP)$(PGM_DIR)/api_cmddefs.h:
	cd $(@D) && $(MAKE) $(@F)

clean::
	-rm -f *.made
	-rm -f -r BrlAPIref

distclean::
	-rm -f brltty.conf brltty.1 BrlAPIref.doxy

