include $(BLD_TOP)/config.mk
ABS_SRC_DIR = @abs_srcdir@

programs: Manual BrlAPI man1 $(BUILD_API)

Manual: Manual.txt Manual.made

BrlAPI: BrlAPI.txt BrlAPI.made

man1:
	$(INSTALL_DIRECTORY) man1
	cp $(SRC_DIR)/*.1 man1

api: api.made

api.made: $(SRC_TOP)$(PGM_DIR)/brlapi.h api_doxy.cfg
	doxygen api_doxy.cfg
	touch $@

%.txt: $(SRC_DIR)/%.sgml
	sgml2txt -l english -c latin $<

%.made: $(ABS_SRC_DIR)/%.sgml
	$(INSTALL_DIRECTORY) SGML-HTML
	cd SGML-HTML && sgml2html -l english -c ascii $<
	touch $@

clean::
	-rm -f *.made *.txt
	-rm -fr *-HTML man?

distclean::
	-rm -f api_doxy.cfg

