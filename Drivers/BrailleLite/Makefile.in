include $(BLD_TOP)config.mk

###############################################################################
# Makefile for the BrailleLite driver
###############################################################################

DRIVER_CODE = bl
DRIVER_NAME = BrailleLite
BRAILLE_MODELS = 18/40/M40
SPEECH_MODELS = 
HELP_DEPS = $(SRC_DIR)/help0.txt $(SRC_DIR)/help1.txt

include $(SRC_TOP)driver.mk

braille.o:
	$(CC) $(BRL_CFLAGS) -c $(SRC_DIR)/braille.c

speech.o:
	$(CC) $(SPK_CFLAGS) -c $(SRC_DIR)/speech.c

$(SRC_DIR)/help0.txt: $(SRC_DIR)/help.src
	sed 's/<x20>\(.*\)$$/\1/' <$(SRC_DIR)/help.src \
	| grep -v '<x40>' >$@

$(SRC_DIR)/help1.txt: $(SRC_DIR)/help.src
	sed 's/<x40>\(.*\)$$/\1/' <$(SRC_DIR)/help.src \
	| grep -v '<x20>' >$@

clean::
	-rm -f $(HELP_DEPS)
