include $(BLD_TOP)config.mk

###############################################################################
# Makefile for BRLTTY Voyager driver
###############################################################################

DRIVER_CODE = vo
DRIVER_NAME = Voyager
BRAILLE_MODELS = 44/70
HELP_DEPS = $(HELP_TEXT)

include $(SRC_TOP)driver.mk

braille.$O:
	$(CC) $(BRL_CFLAGS) $(KDRIVER) -c $(SRC_DIR)/braille.c

#Let's not rebuild the help unless the user wants to as it requires python.
remakehelp: mkhlp $(SRC_DIR)/hlptrans.py $(SRC_DIR)/braille.c $(SRC_DIR)/help.template
	chmod u+x mkhlp
	./mkhlp
