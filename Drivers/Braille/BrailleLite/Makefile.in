DRIVER_CODE = bl
DRIVER_NAME = BrailleLite
DRIVER_COMMENT = 18/40/M20/M40
DRIVER_VERSION = 0.6.0 (June 2003)
DRIVER_DEVELOPERS = Nikhil Nair
include $(SRC_TOP)braille.mk

braille.$O:
	$(CC) $(BRL_CFLAGS) -c $(SRC_DIR)/braille.c

help-files: default.hlp 18.hlp

default.hlp: $(SRC_DIR)/help.src
	sed -e '1s/<x00>/Braille Lite/' -e 's/^<x40>//' <$(SRC_DIR)/help.src \
	| grep -v '^<x20>' >$@

18.hlp: $(SRC_DIR)/help.src
	sed -e '1s/<x00>/Braille Lite 18/' -e 's/^<x20>//' <$(SRC_DIR)/help.src \
	| grep -v '^<x40>' >$@

